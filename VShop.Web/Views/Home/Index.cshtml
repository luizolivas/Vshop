@model IEnumerable<VShop.Web.Models.ProductViewModel>
<link rel="stylesheet" href="/css/product.css" asp-append-version="true" />


<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="card" style="width: 18rem;">
                <a href="/Home/ProductsDetails/@product.Id">
                    <div class="card">
                        <img class="img-thumbnail" src="/image/@product.ImageURL" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">
                                <b>@product.Price.ToString("C")</b>
                            </p>

                        </div>
                    </div>

                </a>
            </div>
        }
    </div>
</form>